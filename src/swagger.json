{
    "openapi": "3.0.0",
    "info": {
        "title": "API Ignite-SOLID de criação de usuários",
        "description": "Essa API tem como objetivo o gerenciamento de usuários de um banco em memória",
        "contact": {
            "email": "pabloxt14@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Cadastro de usuário",
                "description": "Essa rota será responsável por cadastrar um novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "John Doe",
                                    "email": "johndoe@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {                                       
                                        "admin": false,
                                        "id": "cc5359f3-35fa-4c51-b02b-88a2df2ef0aa",
                                        "name": "John Doe",
                                        "email": "johndoe@gmail.com",
                                        "created_at": "2022-07-12T21:20:11.060Z",
                                        "updated_at": "2022-07-12T21:20:11.060Z"                                     
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists!"
                    }
                }
            },
            "get": {
                "tags": ["Users"]
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": ["Users"],
                "summary": "Tornar usuário em admin",
                "description": "Essa rota será responsável por tornar o usuário em admin",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "ID do usuário para tornar em admin",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User does not exist!"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "admin": {
                        "type": "boolean"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date"
                    }
                }
            }
        }
    }
}